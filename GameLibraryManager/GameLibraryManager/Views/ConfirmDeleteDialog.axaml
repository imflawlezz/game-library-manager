<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GameLibraryManager.ViewModels"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        x:Class="GameLibraryManager.Views.ConfirmDeleteDialog"
        x:DataType="vm:ConfirmDeleteDialogViewModel"
        Title="Confirm Delete"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#0D1117">
    
    <Border Background="#161B22"
            CornerRadius="12"
            Margin="16"
            Padding="24"
            BorderBrush="#30363D"
            BorderThickness="1"
            BoxShadow="0 16 32 0 #60000000">
        <StackPanel Spacing="20">
            
            
            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <Border Width="64" Height="64"
                        CornerRadius="32"
                        Background="#F8514920"
                        HorizontalAlignment="Center">
                    <i:Icon Value="fa-solid fa-triangle-exclamation" 
                            FontSize="28"
                            Foreground="#F85149"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="{Binding Title}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#F0F6FC"
                           TextAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            
            <Border Background="#21262D"
                    CornerRadius="8"
                    Padding="16">
                <TextBlock Text="{Binding Message}"
                           FontSize="14"
                           Foreground="#8B949E"
                           TextWrapping="Wrap"
                           LineHeight="22"
                           TextAlignment="Center"/>
            </Border>
            
            
            <Grid ColumnDefinitions="*,*" Margin="0,8,0,0">
                <Button Grid.Column="0"
                        Command="{Binding CancelCommand}"
                        Content="Cancel"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,8,0"
                        Height="40"/>
                <Button Grid.Column="1"
                        Command="{Binding ConfirmCommand}"
                        Classes="danger"
                        HorizontalAlignment="Stretch"
                        Margin="8,0,0,0"
                        Height="40">
                    <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                        <i:Icon Value="fa-solid fa-trash" FontSize="14"/>
                        <TextBlock Text="Delete" 
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            
        </StackPanel>
    </Border>
</Window>

