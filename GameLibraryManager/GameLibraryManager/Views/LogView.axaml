<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GameLibraryManager.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:converters="using:GameLibraryManager.Converters"
             xmlns:spinner="using:GameLibraryManager.Controls"
             x:Class="GameLibraryManager.Views.LogView"
             x:DataType="vm:LogViewModel">
    
    <Grid RowDefinitions="*">
        
        <Border Grid.Row="0"
                Background="#161B22"
                CornerRadius="12"
                BorderBrush="#30363D"
                BorderThickness="1"
                ClipToBounds="True">
            <Grid RowDefinitions="Auto,*">
                
                <Border Grid.Row="0"
                        Background="#21262D"
                        Padding="24,16"
                        BorderBrush="#30363D"
                        BorderThickness="0,0,0,1"
                        ClipToBounds="False">
                    <ScrollViewer HorizontalScrollBarVisibility="Visible" 
                                  VerticalScrollBarVisibility="Disabled">
                        <Grid ColumnDefinitions="80,140,120,100,100,200,200,200" MinWidth="1140">
                        <TextBlock Grid.Column="0" 
                                   Text="ID" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Timestamp" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="2" 
                                   Text="User" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="3" 
                                   Text="Table" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="4" 
                                   Text="Action" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="5" 
                                   Text="Field" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="6" 
                                   Text="Old Value" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        <TextBlock Grid.Column="7" 
                                   Text="New Value" 
                                   FontWeight="SemiBold" 
                                   FontSize="13"
                                   Foreground="#8B949E"/>
                        </Grid>
                    </ScrollViewer>
                </Border>
                
                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Visible"
                                  HorizontalScrollBarVisibility="Visible"
                                  IsVisible="{Binding !IsLoading}">
                        <ItemsControl ItemsSource="{Binding LogEntries}" MinWidth="1140">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="24,14"
                                            BorderBrush="#30363D"
                                            BorderThickness="0,0,0,1"
                                            Background="Transparent">
                                        <Border.Styles>
                                            <Style Selector="Border:pointerover">
                                                <Setter Property="Background" Value="#21262D"/>
                                            </Style>
                                        </Border.Styles>
                                        <Grid ColumnDefinitions="80,140,120,100,100,200,200,200">
                                            
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding LogID}"
                                                       FontSize="13"
                                                       Foreground="#6E7681"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding Timestamp, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                                       FontSize="13"
                                                       Foreground="#8B949E"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Username}"
                                                       FontSize="13"
                                                       Foreground="#F0F6FC"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <Binding Path="Username" FallbackValue="System"/>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            
                                            <TextBlock Grid.Column="3"
                                                       Text="{Binding TableName}"
                                                       FontSize="13"
                                                       Foreground="#8B949E"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="4"
                                                       Text="{Binding Action}"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       Foreground="#58A6FF"
                                                       VerticalAlignment="Center"/>
                                            
                                            <TextBlock Grid.Column="5"
                                                       Text="{Binding FieldName}"
                                                       FontSize="13"
                                                       Foreground="#8B949E"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="180"/>
                                            
                                            <StackPanel Grid.Column="6"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        VerticalAlignment="Center"
                                                        IsVisible="{Binding OldValue, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <TextBlock Text="{Binding OldValue}"
                                                           FontSize="13"
                                                           Foreground="#8B949E"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="160"/>
                                                <Button Command="{Binding $parent[ItemsControl].DataContext.CopyToClipboardCommand}"
                                                        CommandParameter="{Binding OldValue}"
                                                        Classes="icon"
                                                        Padding="4"
                                                        ToolTip.Tip="Copy to clipboard">
                                                    <Button.IsVisible>
                                                        <MultiBinding Converter="{StaticResource ShouldShowCopyConverter}">
                                                            <Binding Path="OldValue"/>
                                                            <Binding Path="FieldName"/>
                                                            <Binding Path="$parent[ItemsControl].DataContext"/>
                                                        </MultiBinding>
                                                    </Button.IsVisible>
                                                    <i:Icon Value="fa-solid fa-copy" 
                                                            FontSize="12"
                                                            Foreground="#6E7681"/>
                                                </Button>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="7"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        VerticalAlignment="Center"
                                                        IsVisible="{Binding NewValue, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                                                <TextBlock Text="{Binding NewValue}"
                                                           FontSize="13"
                                                           Foreground="#F0F6FC"
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"
                                                           MaxWidth="160"/>
                                                <Button Command="{Binding $parent[ItemsControl].DataContext.CopyToClipboardCommand}"
                                                        CommandParameter="{Binding NewValue}"
                                                        Classes="icon"
                                                        Padding="4"
                                                        ToolTip.Tip="Copy to clipboard">
                                                    <Button.IsVisible>
                                                        <MultiBinding Converter="{StaticResource ShouldShowCopyConverter}">
                                                            <Binding Path="NewValue"/>
                                                            <Binding Path="FieldName"/>
                                                            <Binding Path="$parent[ItemsControl].DataContext"/>
                                                        </MultiBinding>
                                                    </Button.IsVisible>
                                                    <i:Icon Value="fa-solid fa-copy" 
                                                            FontSize="12"
                                                            Foreground="#6E7681"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <Border Background="#E00D1117"
                            IsVisible="{Binding IsLoading}">
                        <spinner:LoadingSpinner Text="Loading audit log"/>
                    </Border>
                    
                    <Border IsVisible="{Binding IsEmpty}"
                            Background="#161B22">
                        <StackPanel VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Spacing="16">
                            <i:Icon Value="fa-solid fa-file-lines" 
                                    FontSize="48"
                                    Foreground="#6E7681"/>
                            <TextBlock Text="No log entries found"
                                       FontSize="16"
                                       Foreground="#8B949E"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>

