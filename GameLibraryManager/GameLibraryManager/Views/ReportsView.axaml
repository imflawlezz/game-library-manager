<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:GameLibraryManager.ViewModels"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="GameLibraryManager.Views.ReportsView"
             x:DataType="vm:ReportsViewModel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Panel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,40">
            <Border Background="#161B22"
                    CornerRadius="12"
                    Width="600"
                    Padding="32"
                    BorderBrush="#30363D"
                    BorderThickness="1"
                    BoxShadow="0 16 32 0 #60000000">
                <StackPanel Spacing="24">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Type"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="#8B949E"/>
                            <ComboBox ItemsSource="{Binding ReportTypes}"
                                      SelectedItem="{Binding SelectedType}"
                                      HorizontalAlignment="Stretch"/>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="Title *"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="#8B949E"/>
                            <Grid>
                                <TextBox Text="{Binding Title}"
                                         Watermark="Enter a brief title"
                                         MaxLength="255"
                                         Padding="40,10,12,10"/>
                                <i:Icon Value="fa-solid fa-heading" 
                                        FontSize="14"
                                        Foreground="#6E7681"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Margin="12,0,0,0"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Spacing="8">
                            <TextBlock Text="Content *"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       Foreground="#8B949E"/>
                            <Grid>
                                <TextBox Text="{Binding Content}"
                                         Watermark="Describe your report or suggestion in detail..."
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinHeight="200"
                                         MaxLength="5000"
                                         Padding="40,10,12,10"/>
                                <i:Icon Value="fa-solid fa-align-left" 
                                        FontSize="14"
                                        Foreground="#6E7681"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        Margin="12,10,0,0"/>
                            </Grid>
                        </StackPanel>
                    </StackPanel>
                    
                    <Button Command="{Binding SubmitReportCommand}"
                            Classes="primary"
                            HorizontalAlignment="Stretch"
                            Height="44"
                            IsEnabled="{Binding !IsSubmitting}">
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                            <i:Icon Value="fa-solid fa-paper-plane" 
                                    FontSize="14" 
                                    IsVisible="{Binding !IsSubmitting}"/>
                            <TextBlock Text="Submit" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding !IsSubmitting}"/>
                            <TextBlock Text="Submitting..." 
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"
                                       IsVisible="{Binding IsSubmitting}"/>
                        </StackPanel>
                    </Button>
                    
                </StackPanel>
            </Border>
        </Panel>
    </ScrollViewer>
</UserControl>

